{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles:article_id": {
    "description": "retrieves the specificed article",
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "retrieves an array of all comments associated with the given article",
    "exampleResponse": {
      "article": [
        {
          "body": "This is a bad article name",
          "votes": 1,
          "author": "butter_bridge",
          "article_id": 6,
          "created_at": 1602433380000
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "allows a comment to be posted(and assigned to an article",
    "exampleResponse": {
      "comment": [
        {
          "body": "This morning, I showered for nine minutes.",
          "votes": 16,
          "author": "butter_bridge",
          "article_id": 1,
          "created_at": 1595294400000
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "changes the number of votes an article has",
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 6,
          "comment_count": 6
        }
      ]
    }
  }
}
